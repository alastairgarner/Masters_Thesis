file = {:home/alastair/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Berni, Muldal, Pulver - 2010 - Using Neurogenetics and the Warmth-Gated Ion Channel TRPA1 to Study the Neural Basis of Behavior in iDros.pdf:pdf},
