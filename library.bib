keywords = {Allodynia,Cytokines,Drosophila,Eiger,Hyperalgesia,Nociception,Tissue repair,Tumor necrosis factor,UV damage,Wengen},
number = {6},
pages = {517--519},
pmid = {20195458},
title = {{Two sides of the same coin no longer: Genetic separation of nociceptive sensitization responses}},
volume = {2},
year = {2009}
}
