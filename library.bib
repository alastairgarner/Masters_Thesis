isbn = {1879-0445 (Electronic)$\backslash$r0960-9822 (Linking)},
issn = {09609822},
journal = {Current Biology},
number = {20},
pages = {1861--1870},
pmid = {22940472},
publisher = {Elsevier Ltd},
title = {{Autonomous circuitry for substrate exploration in freely moving drosophila larvae}},
