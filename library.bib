keywords = {Allodynia,Behavioral assay,Chemical nociception,Dendritic arborization neurons,Drosophila sensory neurons,Fly behavioral response,Hyperalgesia,Mechanical nociception,Neuroscience,Nociceptive sensitization,Thermal nociception,Tissue damage},
number = {1},
pages = {16--26},
title = {{Pokes, sunburn, and hot sauce: Drosophila as an emerging model for the biology of nociception}},
