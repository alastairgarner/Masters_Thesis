doi = {10.1214/aos/1016218223},
file = {:home/alastair/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Friedman, Hastie, Tibshirani - 2000 - Additive logistic regression A statistical view of boosting.pdf:pdf},
