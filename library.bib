issn = {17425662},
journal = {Journal of the Royal Society Interface},
keywords = {Biophysics,Caenorhabditis elegans,Gait adaptation,Locomotion,Muscle activity,Phase-shift},
pmid = {25551155},
title = {{A consistent muscle activation strategy underlies crawling and swimming in Caenorhabditis elegans}},
year = {2015}
}
@article{Calhoun2017,
