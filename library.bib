file = {:home/alastair/OneDrive/Papers/Pnevmatikakis Paninski 2016 Neuron.pdf:pdf},
issn = {10974199},
journal = {Neuron},
number = {2},
pages = {285},
title = {{Simultaneous Denoising, Deconvolution, and Demixing of Calcium Imaging Data}},
volume = {89},
year = {2016}
}
