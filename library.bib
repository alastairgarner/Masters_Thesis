doi = {10.3389/fphys.2018.01049},
file = {:home/alastair/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Walters - 2018 - Nociceptive biology of molluscs and arthropods Evolutionary clues about functions and mechanisms potentially related to.pdf:pdf},
issn = {1664042X},
journal = {Frontiers in Physiology},
keywords = {Allodynia,Anxiety,Aversive learning,Hyperalgesia,Nerve injury,Nociceptive sensitization,Nociceptor,Synaptic potentiation},
