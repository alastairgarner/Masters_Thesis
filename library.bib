journal = {Journal of Neuroscience},
keywords = {acoustic,amplitude modulation,anuran,auditory,in,inferior colliculus,interval,intracellular,neuroethology,patch clamp,temporal coding,torus semicircularis,vivo},
number = {49},
pages = {13384--13392},
