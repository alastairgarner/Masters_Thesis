keywords = {Activity,Connectivity,Drosophila,Neurogenesis,Synaptic activity,Synaptogenesis,aCC},
number = {5},
pages = {1523--1531},
pmid = {11222642},
title = {{Altered electrical properties in Drosophila neurons developing without synaptic transmission}},
volume = {21},
year = {2001}
}
